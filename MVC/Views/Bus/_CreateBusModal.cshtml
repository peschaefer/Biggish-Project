@model MVC.Models.Bus

@{
    <link rel="stylesheet" href="~/css/bus_index.css" />
}

<div class="modal fade" id="createBusModal" tabindex="-1" aria-labelledby="busModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div id="busModalContent" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-5" id="busModalLabel">Create Bus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createBusForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div id="bus-number-input" class="form-group">
                        <label asp-for="BusNumber" class="control-label">Bus Number: </label>
                        <input type="text" placeholder="Enter bus number..." asp-for="BusNumber" name="BusNumber" class="form-control" />
                        <span asp-validation-for="BusNumber" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitNewBus()">Create</button>
            </div>
        </div>
    </div>
</div>
