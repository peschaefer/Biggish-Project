@model MVC.Models.Loop

@{
    <link rel="stylesheet" href="~/css/loop_index.css" />
}

<div class="modal fade" id="createLoopModal" tabindex="-1" aria-labelledby="loopModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div id="loopModalContent" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-5" id="loopModalLabel">Create Loop</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createLoopForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div id="loop-name-input" class="form-group">
                        <label asp-for="Name" class="control-label">Loop name: </label>
                        <input type="text" placeholder="Enter loop name..." asp-for="Name" name="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                @* TODO: Add create loop functionality with routes included. 
                Currently only works if Loop model is changed to not require a list of routes, 
                for testing purposes. *@
                <button type="button" class="btn btn-primary" onclick="submitNewLoop()">Create</button>
            </div>
        </div>
    </div>
</div>
